{
  "name": "z-reader-mini",
  "displayName": "z-reader-mini",
  "description": "基于 [z-reader](https://github.com/aooiuu/z-reader) 缩减版，只支持本地epub",
  "keywords": [
    "epub",
    "z-reader",
    "阅读",
    "小说"
  ],
  "publisher": "zonas",
  "license": "MIT",
  "version": "1.0.2",
  "icon": "static/images/icon-green.png",
  "qna": "https://github.com/aooiuu/z-reader.git/issues",
  "bugs": {
    "url": "https://github.com/aooiuu/z-reader.git/issues",
    "email": "aooiu@qq.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/zonas0574/z-reader-mini.git"
  },
  "engines": {
    "vscode": "^1.39.0"
  },
  "categories": [
    "Other",
    "Extension Packs"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "z-reader-mini.command.refresh",
        "title": "重新加载目录",
        "category": "z-reader-mini"
      },
      {
        "command": "z-reader-mini.command.openLocalDirectory",
        "title": "打开本地目录",
        "category": "z-reader-mini"
      },
      {
        "command": "z-reader-mini.command.goChapter",
        "title": "定位上次章节",
        "icon": "static/images/position.svg",
        "category": "z-reader-mini"
      },
      {
        "command": "z-reader-mini.command.editHtml",
        "title": "html编辑",
        "category": "z-reader-mini"
      },
      {
        "command": "z-reader-mini.command.editStyle",
        "title": "css编辑",
        "category": "z-reader-mini"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "treeView",
          "title": "小说",
          "icon": "static/images/icon.svg"
        }
      ]
    },
    "views": {
      "treeView": [
        {
          "id": "z-reader-mini-menu",
          "name": "目录"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "z-reader-mini.command.openLocalDirectory",
          "when": "view == z-reader-mini-menu",
          "group": "custom@1"
        },
        {
          "command": "z-reader-mini.command.refresh",
          "when": "view == z-reader-mini-menu",
          "group": "custom@2"
        },
        {
          "command": "z-reader-mini.command.editHtml",
          "when": "view == z-reader-mini-menu",
          "group": "custom@3"
        },
        {
          "command": "z-reader-mini.command.editStyle",
          "when": "view == z-reader-mini-menu",
          "group": "custom@4"
        }
      ],
      "view/item/context": [
        {
          "command": "z-reader-mini.command.goChapter",
          "when": "view == z-reader-mini-menu",
          "group": "inline"
        }
      ]
    }
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "scripts": {
    "build": "vsce package",
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "^10.12.21",
    "@types/vscode": "^1.39.0",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "eslint": "^8.9.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "prettier-eslint": "^13.0.0",
    "typescript": "^4.5.5"
  },
  "dependencies": {
    "epub": "^1.2.1",
    "glob": "^7.1.4",
    "open": "^7.4.2"
  }
}
